<Window x:Class="MobileDebugTool.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mobile Debug Tool"
        Width="1280"
        Height="720"
        MinWidth="1024"
        MinHeight="640"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Style="{StaticResource CardBorderStyle}" Grid.Row="0">
            <DockPanel>
                <StackPanel Orientation="Vertical" DockPanel.Dock="Left">
                    <TextBlock FontSize="20" FontWeight="SemiBold" Text="All-in-One Mobile Debugging Tool" />
                    <TextBlock Style="{StaticResource MutedTextStyle}" Text="Phase 1 Â· Dark UI Foundation" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Start" IsEnabled="False" />
                    <Button Content="Pause" IsEnabled="False" />
                    <Button Content="Stop" IsEnabled="False" />
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}">
                <TextBlock Style="{StaticResource MutedTextStyle}" Text="Live logs view placeholder" />
            </Border>

            <StackPanel Grid.Column="1">
                <Border Style="{StaticResource CardBorderStyle}">
                    <TextBlock Style="{StaticResource MutedTextStyle}" Text="Connected device placeholder" />
                </Border>
                <Border Style="{StaticResource CardBorderStyle}">
                    <TextBlock Style="{StaticResource MutedTextStyle}" Text="Device info placeholder" />
                </Border>
            </StackPanel>
        </Grid>

        <Border Grid.Row="2" Style="{StaticResource CardBorderStyle}">
            <TextBlock Style="{StaticResource MutedTextStyle}" Text="Status: Idle" />
        </Border>
    </Grid>
</Window>
